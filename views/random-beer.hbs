<div>
  {{#each this as |beer|}}
    <img src='{{beer.image_url}}' />
    <h2>{{beer.name}}</h2>
    <p>{{beer.description}}</p>
    <p>{{beer.tagline}}</p>
    <h2>Food Pairing</h2>
    <ul>
      {{beer.food_pairing}}
      <li>{{this}}</li>
    </ul>
    <h2>Brewers Tips</h2>
    <p>{{beer.brewers_tips}}</p>
</div>